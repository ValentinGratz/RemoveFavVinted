{
  "manifest_version": 3,
  "name": "RemoveFavVinted",
  "version": "1.1.0",
  "description": "Supprime automatiquement les favoris des articles marqu√©s comme 'vendu' sur Vinted.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.vinted.fr/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ]
}
